{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "DOM",
      "dom.iterable",
      "ESNext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "app/*": [
        "app/*"
      ],
      "components/*": [
        "components/*"
      ],
      "types/*": [
        "types/*"
      ],
      "config/*": [
        "config/*"
      ],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "next.config.js",
    ".next/types/**/*.ts",
    "utils/bundleWebpackPlugin.js",
    "utils/bundle.js"
  ],
  "exclude": [
    "node_modules",
    "next.config.js",
    "tailwind.config.js"
  ]
}